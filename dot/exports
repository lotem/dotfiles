#!/bin/bash

# Variables {

# OMZ Powerline
DEFAULT_USER=$USERNAME

# Editor
export VISUAL='emacsclient'
export ALTERNATE_EDITOR='emacs -Q -nw'

# Pager
#export BAT_THEME='ansi-light'

# }

# Locale {
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
# }

# Path {

# CMake search path
if [ -d "$HOME/.homebrew" ]; then
  export CMAKE_PREFIX_PATH=$HOME:$HOME/.homebrew
fi

# Homebrew
HOMEBREW_MIRROR='ustc'

if [ "$HOMEBREW_MIRROR" = 'ustc' ]; then
    # https://mirrors.ustc.edu.cn/help/homebrew-bottles.html
    export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.ustc.edu.cn/homebrew-bottles

elif [ "$HOMEBREW_MIRROR" = 'tuna' ]; then
    # https://mirrors.tuna.tsinghua.edu.cn/help/homebrew-bottles/
    export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.tuna.tsinghua.edu.cn/homebrew-bottles
fi

# Rust
RUST_MIRROR='ustc'

#export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/src"
export PATH=$PATH:$HOME/.cargo/bin

if [ "$RUST_MIRROR" = 'ustc' ]; then
  export RUSTUP_DIST_SERVER=https://mirrors.ustc.edu.cn/rust-static
  export RUSTUP_UPDATE_ROOT=https://mirrors.ustc.edu.cn/rust-static/rustup
fi

# Golang
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# nvm
if [ -f ~/.nvm/nvm.sh ]; then
  source ~/.nvm/nvm.sh
  nvm use node >/dev/null
fi

# CrossPack-AVR
if [ -d /usr/local/CrossPack-AVR ]; then
  export PATH=$PATH:/usr/local/CrossPack-AVR/bin
fi

# Rime
if [[ "$OSTYPE" =~ 'linux-gnu' ]]; then
  export RIME_SHARED="/usr/share/rime-data"
  export RIME_USER="$HOME/.config/ibus/rime"
elif [[ "$OSTYPE" =~ 'darwin' ]]; then
  export RIME_SHARED="/Library/Input Methods/Squirrel.app/Contents/SharedSupport"
  export RIME_USER="$HOME/Library/Rime"
fi
export RIME="$RIME_USER"

# }

# Aliases {

# if command -v hub >/dev/null; then
#   # Wrap git automatically by adding the following to ~/.zshrc:
#   eval "$(hub alias -s)"
# fi

# }

# Key bindings {

if [ -n "$ZSH_VERSION" ]; then
  # Mac USB keypad
  # 0 . Enter
  bindkey -s "^[Op" "0"
  bindkey -s "^[On" "."
  bindkey -s "^[OM" "^M"
  # 1 2 3
  bindkey -s "^[Oq" "1"
  bindkey -s "^[Or" "2"
  bindkey -s "^[Os" "3"
  # 4 5 6
  bindkey -s "^[Ot" "4"
  bindkey -s "^[Ou" "5"
  bindkey -s "^[Ov" "6"
  # 7 8 9
  bindkey -s "^[Ow" "7"
  bindkey -s "^[Ox" "8"
  bindkey -s "^[Oy" "9"
  # + -  * / =
  bindkey -s "^[Ok" "+"
  bindkey -s "^[Om" "-"
  bindkey -s "^[Oj" "*"
  bindkey -s "^[Oo" "/"
  bindkey -s "^[OX" "="
fi

# }

if [[ `hostname` =~ \\.corp\\.google\\.com ]]; then
  source $HOME/.exports-google
fi
