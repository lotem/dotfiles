#!/bin/sh

set -e

if [ -z "${root_dir}" ]; then
  root_dir="$HOME"
fi

if [ -z "${fs}" ]; then
  fs="${root_dir}/fs"
fi

if [ -z "${mnt}" ]; then
  mnt="/mnt"
fi

help() {
  exe_name="$(basename $0)"
  echo "Usage:
\$ encrypt=(yes|no) ${exe_name} create <volume> <size-in-GB>
\$ ${exe_name} open <volume>
\$ ${exe_name} close <volume>
"
}

unless_owner() {
  local grant="$1"
  local cmd="$2"
  local target="$3"
  local parent="$(dirname "${target}")"
  if [ -w "${parent}" ]; then
    grant=''
  fi
  $grant $cmd "${target}"
}

create_disk_image() {
  local volume="$1"
  local size="$2"
  if [ -z "$volume" ] || [ -z "$size" ]; then
    help
    exit 1
  fi

  local file="$volume"
  if [ "${file%.img}" != "${file}" ]; then
    volume="${file##*/}"
    volume="${volume%.img}"
  else
    file="${fs}/${volume}.img"
  fi
  if [ -e "$file" ]; then
    echo "file already exists: $file"
    exit 1
  fi

  echo "creating volume: $volume"
  dd of="$file" bs=1k seek=$(($size * 1024 * 1024)) count=0

  if [ "$encrypt" == 'no' ]; then
    "mkfs.${fstype:-ext4}" -L "$volume" "$file"
  else
    cryptsetup -v luksFormat "$file"
    sudo cryptsetup luksOpen "$file" "$volume"
    sudo "mkfs.${fstype:-ext4}" -L "$volume" "/dev/mapper/${volume}"
    echo 'filesystem created.'
    sleep 1
    sudo cryptsetup luksClose "$volume"
  fi
  echo 'sparse disk image created.'
  ls -lahts "$file"
  #df -hm
}

open_disk_image() {
  local volume="$1"
  if [ -z "${volume}" ]; then
    help
    exit 1
  fi

  local file="$volume"
  if [ "${file%.img}" != "${file}" ]; then
    volume="${file##*/}"
    volume="${volume%.img}"
  else
    file="${fs}/${volume}.img"
  fi
  if ! [ -f "$file" ]; then
    echo "disk image does not exist: $file"
    exit 1
  fi

  local mount_point="${mnt}/${volume}"
  unless_owner 'sudo' 'mkdir -p' "${mount_point}"

  if echo LUKS | cmp --bytes=4 --quiet "$file" ; then
    sudo cryptsetup luksOpen --allow-discards "${file}" "${volume}"
    file="/dev/mapper/${volume}"
  fi

  sudo mount -o discard "${file}" "${mount_point}"
}

close_disk_image() {
  local volume="$1"
  if [ -z "${volume}" ]; then
    help
    exit 1
  fi

  local file="$volume"
  if [ "${file%.img}" != "${file}" ]; then
    volume="${file##*/}"
    volume="${volume%.img}"
  else
    file="${fs}/${volume}.img"
  fi
  local mount_point="${mnt}/${volume}"

  sudo umount "${mount_point}"
  unless_owner 'echo skipped' 'rmdir' "${mount_point}"

  if echo LUKS | cmp --bytes=4 --quiet "$file" ; then
    sleep 1
    sudo cryptsetup luksClose "$volume"
  fi
}

# main
if [ -z "$1" ]; then
  help
  exit 0
fi
cmd="$1"
shift
if [ "$cmd" == 'create' ]; then
  create_disk_image $@
elif [ "$cmd" == 'open' ]; then
  open_disk_image $@
elif [ "$cmd" == 'close' ]; then
  close_disk_image $@
else
  help
  exit 1
fi
